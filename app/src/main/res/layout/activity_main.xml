<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black"
        android:elevation="3dp"
        android:gravity="center"
        android:text="Material应用"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/mBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray_9d9c9c"
        android:onClick="onClick"
        android:text="TabLayout" />

    <Button
        android:id="@+id/mBtn2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray_9d9c9c"
        android:onClick="onClick"
        android:text="CoordinatorLayout与FloatingActionButton" />

    <Button
        android:id="@+id/mBtn3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray_9d9c9c"
        android:onClick="onClick"
        android:text="CoordinatorLayout与AppBarLayout" />

    <Button
        android:id="@+id/mBtn4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray_9d9c9c"
        android:onClick="onClick"
        android:text="AppBarLayout嵌套CollapsingToolbarLayout" />

    <Button
        android:id="@+id/mBtn5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray_9d9c9c"
        android:onClick="onClick"
        android:text="BottomSheetBehavior" />

    <Button
        android:id="@+id/mBtn6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray_9d9c9c"
        android:onClick="onClick"
        android:text="BottomSheetDialog" />

</LinearLayout>