<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black"
        android:elevation="3dp"
        android:gravity="center"
        android:text="Material库控件应用"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/item_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray_9d9c9c"
        android:onClick="onClick"
        android:text="TabLayout" />

    <Button
        android:id="@+id/item_btn2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray_9d9c9c"
        android:onClick="onClick"
        android:text="CoordinatorLayout与FloatingActionButton" />

    <Button
        android:id="@+id/item_btn3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray_9d9c9c"
        android:onClick="onClick"
        android:text="CoordinatorLayout与AppBarLayout" />

    <Button
        android:id="@+id/item_btn4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray_9d9c9c"
        android:onClick="onClick"
        android:text="AppBarLayout嵌套CollapsingToolbarLayout" />

    <Button
        android:id="@+id/item_btn5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray_9d9c9c"
        android:onClick="onClick"
        android:text="BottomSheetBehavior" />

    <Button
        android:id="@+id/item_btn6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray_9d9c9c"
        android:onClick="onClick"
        android:text="BottomSheetDialog" />

</LinearLayout>